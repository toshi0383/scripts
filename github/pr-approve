#!/bin/bash
TOKEN=${GITHUB_ACCESS_TOKEN:?"GitHub Personal Access Token is required."}
NUMBER=${1:?}
USER_REPO=$(git remote -sS | head -1 | sed -n 's/.*github.com.\(.*\)\.git.*/\1/p')
DATA=$(cat <<EOF
{
    "event": "APPROVE",
    "body": "ðŸ‘Œ"
}
EOF
)
curl -v -H "Authorization: token ${TOKEN}" \
    https://api.github.com/repos/${USER_REPO}/pulls/${NUMBER}/reviews \
    -d "${DATA}"
